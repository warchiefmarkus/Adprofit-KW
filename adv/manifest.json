{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "AdvProfit",
    "short_name": "AdvProfit",
    "version": "1.4.7",
    
    "description": "Расширение ловит и заменяет рекламу. За просмотр новой рекламы Вы получаете прибыль.",

    "icons": {
        "16": "/assets/img/16x16.png",
        "32": "/assets/img/32x32.png",
        "48": "/assets/img/48x48.png",
        "128": "/assets/img/128x128.png"
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*"],
            "js": [ "/assets/js/jquery.js", "/assets/vendor/jquery-scrollspy/scrollspy.js", "/assets/vendor/mem/mem.js", "/content.js" ],
            "css": ["/assets/css/style.css"],
            "run_at": "document_end"
        }
    ],

    "background": {
        "scripts": [ "/assets/js/jquery.js", "/background.js" ]
    },

    "permissions": [
        "tabs",
        "storage",
        "http://advprofit.ru/*",
        "https://advprofit.ru/*",
        "fileSystem"
    ],

    "browser_action": {
        "default_title": "Статистика",
        "default_icon": "/assets/img/48x48.png",
        "default_popup": "popup.html"
    }

}